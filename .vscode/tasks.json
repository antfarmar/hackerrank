{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

	"version": "0.1.0",
	"command": "go",
	"isShellCommand": true,
	"showOutput": "Always",
	"tasks": [
		{
			"taskName": "run",
			"args": [ "-v", "${file}"],
			"isBuildCommand": true
		},
		{
			"taskName": "test",
			"args": [ "-v", "${file}"],
			"isTestCommand": true
		}
	]
}